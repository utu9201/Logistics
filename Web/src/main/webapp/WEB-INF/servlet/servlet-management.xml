<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="managementUrlHandlerMapping"
          class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">

        <property name="order" value="1"/>
        <property name="alwaysUseFullPath" value="false"/>
        <property name="mappings">
            <props>
                <prop key="dept.do">deptController</prop>
                <prop key="company.do">companyController</prop>
                <prop key="workplace.do">workplaceController</prop>
                <prop key="position.do">positionController</prop>
            </props>
        </property>

    </bean>
    <bean id="deptController" class="net.plang.logistics.base.controller.DeptController"
          p:managementServiceFacade-ref="managementServiceFacade"
    />

    <bean id="companyController" class="net.plang.logistics.base.controller.CompanyController"
          p:managementServiceFacade-ref="managementServiceFacade"
    />
    <bean id="workplaceController" class="net.plang.logistics.base.controller.WorkplaceController"
          p:managementServiceFacade-ref="managementServiceFacade"
    />

    <bean id="positionController" class="net.plang.logistics.base.controller.PositionController"
          p:managementServiceFacade-ref="managementServiceFacade"
    />

</beans>
