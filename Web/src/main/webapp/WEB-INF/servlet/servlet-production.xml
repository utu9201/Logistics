<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="productionUrlHandlerMapping"
          class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">

        <property name="order" value="1"/>
        <property name="alwaysUseFullPath" value="false"/>
        <property name="mappings">
            <props>
                <prop key="mps.do">mpsController</prop>
                <prop key="mrp.do">mrpController</prop>
                <prop key="workInstruction.do">workInstructionController</prop>
                <prop key="prm.do">prmController</prop>
            </props>
        </property>
    </bean>
    <bean id="mpsController" class="net.plang.logistics.production.controller.MpsController"
          p:productionServiceFacade-ref="productionServiceFacade"
    />

    <bean id="mrpController" class="net.plang.logistics.production.controller.MrpController"
          p:productionServiceFacade-ref="productionServiceFacade"
    />

    <bean id="workInstructionController" class="net.plang.logistics.production.controller.WorkInstructionController"
          p:productionServiceFacade-ref="productionServiceFacade"
    />
    <bean id="prmController" class="net.plang.logistics.production.controller.PrmController"
          p:productionServiceFacade-ref="productionServiceFacade"
    />
</beans>
