<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="purchaseUrlHandlerMapping"
          class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">

        <property name="order" value="1"/>
        <property name="alwaysUseFullPath" value="false"/>
        <property name="mappings">
            <props>
                <prop key="item.do">itemController</prop>
                <prop key="bom.do">bomController</prop>
                <prop key="order.do">orderController</prop>
                <prop key="stock.do">stockController</prop>

            </props>
        </property>

    </bean>
    <bean id="itemController" class="net.plang.logistics.purchase.controller.ItemController"
          p:purchaseServiceFacade-ref="purchaseServiceFacade"
    />

    <bean id="bomController" class="net.plang.logistics.purchase.controller.BomController"
          p:purchaseServiceFacade-ref="purchaseServiceFacade"
    />
    <bean id="orderController" class="net.plang.logistics.purchase.controller.OrderController"
          p:purchaseServiceFacade-ref="purchaseServiceFacade"
    />

    <bean id="stockController" class="net.plang.logistics.purchase.controller.StockController"
          p:purchaseServiceFacade-ref="purchaseServiceFacade"
    />
</beans>
